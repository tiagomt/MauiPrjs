<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DemoPage.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DemoPage"
    Title="DemoPage">

    <!-- ***Definição da página principal é feita em "ContentTemplate"-->
    <!--Definindo a cor da barra de navegação (Shell) (BackgroundColor)-->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"
        Shell.ForegroundColor="White"
        Shell.TitleColor="White"
        Shell.BackgroundColor="Chocolate"
        />

</Shell>
