    <!--Definindo a cor do texto da barra de navegação (Shell) (TitleColor)-->
    <!--Definindo a cor do botao de retornar da barra de navegação (Shell) (TitleColor)-->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"
        Shell.ForegroundColor="Aqua" 
